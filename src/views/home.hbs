<main>
  <div class="d-flex justify-content-between">
    <h1>Productos</h1>
    <button id="btnCart" type="button">Carrito</button>
  </div>

  <ul class="products__list">
    {{#each products}}
      <li data-id={{this._id}} class="item">
        <p class="item__data item__title">{{{this.title}}}</p>
        <p class="item__data">Descripci√≥n:
          {{{this.description}}}</p>
        <p class="item__data">Precio: ${{{this.price}}}</p>
        <p class="item__data product__stock">Stock: {{{this.stock}}}</p>

        <div class="d-flex justify-left gap-4">
          <div class="d-flex border-1 align-items-center">
            <button class="btn-minus-qty" type="button">-</button>
            <span class="quantity-display">0</span>
            <button class="btn-plus-qty" type="button">+</button>
          </div>
          <div>
            <button class="btn-add-to-cart" type="button">Agregar al carrito</button>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
</main>

<script>
  window.env =
  {{{json env}}}; window.products =
  {{{json products}}};
</script>
<script src="/js/home.js"></script>